{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "app.ts"
    ]
}